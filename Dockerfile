############################################################
# Dockerfile
############################################################
FROM docker.io/library/golang:1.13-alpine

############################################################
# Environment
############################################################
ENV PACKR_VERSION=2.6.0

############################################################
# Installation
############################################################
RUN apk add --no-cache git &&\
	go get -d -v github.com/shuLhan/go-bindata/...

############################################################
# Execution
############################################################
CMD ["go-bindata", "--help"]
